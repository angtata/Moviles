<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/NewVal" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttontitle"
        android:onClick="OpenBrowser"
        android:layout_gravity="center"
         />

    <Button android:id="@+id/close2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttontitle2"
        android:onClick="OpenActivity"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/TestView1"
        android:text="@string/HolaGente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagen1"
        android:onClick="Tomarid"
        />


</LinearLayout>
